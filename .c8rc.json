{
  "all": true,
  "check-coverage": true,
  "lines": 80,
  "functions": 80,
  "branches": 80,
  "statements": 80,
  "include": [
    "*.js",
    "scripts/*.js"
  ],
  "exclude": [
    "tests/**",
    "node_modules/**",
    "coverage/**",
    "ecosystem.config.cjs",
    "utils/**"
  ],
  "reporter": [
    "text",
    "html",
    "lcov"
  ],
  "reports-dir": "./coverage"
}
